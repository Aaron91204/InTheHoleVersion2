<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aaron.inthehole.HandicapAdjustment"
    android:background="@drawable/background">

    <EditText
        android:id="@+id/retreivehandicap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView7"
        android:layout_marginLeft="91dp"
        android:layout_marginStart="91dp"
        android:ems="10"
        android:hint="Enter Your Handicap"
        android:inputType="number"
        android:textColorHint="#000000" />

    <EditText
        android:id="@+id/retrievenet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/textView8"
        android:ems="10"
        android:hint="Enter Your Net Score"
        android:inputType="number"
        android:textColorHint="#000000" />

    <Button
        android:id="@+id/calculatehandicap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/retrievenet"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:text="Calculate Handicap"
        android:textColorHint="#000000" />

    <EditText
        android:id="@+id/adjust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/retrievenet"
        android:layout_alignStart="@+id/retrievenet"
        android:layout_below="@+id/calculatehandicap"
        android:ems="10"
        android:hint="Adjusted Handicap"
        android:inputType="number"
        android:textColorHint="#000000" />

    <ListView
        android:id="@+id/nListView"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/adjust"></ListView>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/retreivehandicap"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/retreivehandicap"
        android:text="Handicap Adjustment"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/retreivehandicap"
        android:layout_alignStart="@+id/retreivehandicap"
        android:layout_below="@+id/textView6"
        android:text="Handicap"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/retreivehandicap"
        android:layout_alignStart="@+id/retreivehandicap"
        android:layout_below="@+id/retreivehandicap"
        android:text="Net Score"
        android:textSize="18sp" />

</RelativeLayout>
