<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aaron.inthehole.discussionboard"
    android:id="@+id/activity_main">
    <android.support.v7.widget.RecyclerView android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_above="@+id/linearLayout"
        android:id="@+id/messageRec"
        android:background="#8BC34A">

    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout">

        <EditText
            android:id="@+id/editMessageE"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:hint="Enter a message" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="send"
            android:onClick="sendButtonClicked"
            android:background="@drawable/rounded_button"/>

        <Button
            android:id="@+id/messageprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="home"
            android:text="Profile"
            android:background="@drawable/rounded_button"/>
    </LinearLayout>

</RelativeLayout>
